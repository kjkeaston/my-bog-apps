<h2>Add a new creature (routes.rb ==> creatures#new)</h2>

<%= form_for @creature do |abc| %>
  <div class="form-group">
    <%= abc.label :name, "Creature Name" %>
    <%= abc.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= abc.label :description, "Creature Description" %>
    <%= abc.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= abc.label :age, "Creature Age" %>
    <%= abc.text_field :age, class: "form-control" %>
  </div>
    <%= abc.submit "Save your creature", class: "btn btn-outline-info" %>
<% end %>

<%= link_to "Back to home", "/creatures" %>